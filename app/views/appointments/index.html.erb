<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Date_opening</th>
      <th>Recomendations</th>
      <th>Doctor</th>
      <th>Patient</th>
      <th>Visit_No</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
    <% if current_user.id == appointment.pat.id || current_user.id == appointment.doc.id || current_user.admin? %>
      <tr>
        <td><%= appointment.date_opening %></td>
        <td><%= appointment.recomendation %></td>
        <td><%= appointment.doc.fullname %></td>
        <td><%= appointment.pat.fullname %></td>
        <td><%= appointment.visit.id %><td>
        <td><%= link_to 'Show', appointment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
