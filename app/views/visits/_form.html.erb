<%= form_with(model: @visit) do |form| %>
  <% if @visit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visit.errors.count, "error") %> prohibited this vizit from being saved:</h2>

      <ul>
        <% visit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_field :note %>
  </div>

  <div class="field">
    <%= form.label :choose_doctor_category %>
    <%= collection_select(
      :user, :category_id, Category.all, :id, :speciality, { prompt: true }
    ) %>
  </div>

  <div class="field">
    <%= form.label :doctor %>
    <%= form.text_field :doc_id %>
  </div>

  <div class="field">
    <%= form.label :patient %>
    <%= current_user.fullname %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
