<h1>Vizits</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @vizits.each do |vizit| %>
    <% if current_user.id == vizit.user_id %>
      <tr>
        <td><%= vizit.date %></td>
        <td><%= vizit.notes %></td>
        <td><%= vizit.user.fullname %></td>
        <td><%= link_to 'Show', vizit %></td>
        <td><% if can? :update, vizit %>
              <%= link_to 'Edit', edit_vizit_path(vizit) %>
            <% end %></td>
        <td>
          <% if can? :destroy, vizit %>
            <%= link_to 'Destroy', vizit, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
      </tr>
    <% elsif current_user.admin?%>
    <tr>
        <td><%= vizit.date %></td>
        <td><%= vizit.notes %></td>
        <td><%= vizit.user.fullname %></td>
        <td><%= link_to 'Show', vizit %></td>
        <td><% if can? :update, vizit %>
              <%= link_to 'Edit', edit_vizit_path(vizit) %>
            <% end %></td>
        <td>
          <% if can? :destroy, vizit %>
            <%= link_to 'Destroy', vizit, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Vizit %>
  <%= link_to 'New Vizit', new_vizit_path %>
<% end %>
